.bannerbox image.tx{width: 112rpx;height:112rpx;border-radius:112rpx;position: absolute;top:47rpx;left:54rpx;z-index:99;border:5rpx #e7e9ee solid;}

.bannerbox .company_name{position: absolute;top:58rpx;left:194rpx;color:#fff;}
