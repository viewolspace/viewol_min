.contentbox{width:700rpx;margin-left:25rpx; }

.contentbox .tab{height:80rpx;line-height:80rpx;display: flex;  justify-content:center; /* 水平居中 */align-items:center; /* 垂直居中 */padding-top:30rpx;color:#5c5a61;}
.contentbox .tab>view{width:350rpx;height:80rpx;line-height:80rpx;text-align: center;font-size:30rpx;border:1rpx #d2d2d2 solid; }
.contentbox .tab>view.on{color:#3d3ab2;font-weight:bold;border-bottom:4rpx #3d3ab2 solid;height:76rpx; }
.contentbox .content{font-size:28rpx;padding:30rpx 0; }


.tltj{height:150rpx;}
.tltj_title{font-weight:bold;font-size: 28rpx;color:#5c5a61;padding-top:30rpx; }
.tjzs{position: relative;height:190rpx;}
.tjzs .item{width: 226rpx;height:140rpx;overflow: hidden;float:left;text-align: center; margin-right:4rpx;position: relative;}
.tjzs .item .logo{width: 176rpx;height:130rpx;}
.tjzs .d1 ,.tjzs .d2 ,.tjzs .d3,.tjzs .d4 {border-radius:10rpx;width:10rpx;height:10rpx;border:3rpx #3d3ab2 solid;position: absolute;top:55rpx;z-index:999;}
.tjzs .d1{left:0rpx;}
.tjzs .d2{left:221rpx;}
.tjzs .d3{left:453rpx;}
.tjzs .d4{left:670rpx;}

.tltj .wx-swiper-dots.wx-swiper-dots-horizontal{
/* 点外容器 */
bottom:0rpx;
}
.tltj .wx-swiper-dot{
/* 非焦点的点 */
width:11rpx;height: 11rpx;border-radius:11rpx;
display: inline-flex;
border: 4rpx #3d3ab2 dotted;
background:none;
margin-left: 30rpx;/* 点之间的间距 */
}
.tltj .wx-swiper-dot:nth-child(1){
margin-left: 0rpx;
}
.tltj .wx-swiper-dot-active:nth-child(1){
margin-left: 0rpx;
}
.tltj .wx-swiper-dot::before{
content: '';
flex-grow: 1;
}
.tltj .wx-swiper-dot-active{
/* 焦点的点 */
border: 4rpx #3d3ab2 solid;
margin-left: 30rpx; /* 点之间的间距 */
}
.tltj .wx-swiper-dot-active::before{
background:#3d3ab2;
}




