@import "../../../weui.wxss";
.personal {
    text-align: center;
    position: relative
}

.personal .background {
    width: 100%;
}

.personal .personal-container {
    position: absolute;
    width: 100%;
    top: 40rpx;
}

.personal .personal-container .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
}

.personal .personal-container .phone {
    color: #FFFFFF;
    font-size: 32rpx;
    margin-top: 27rpx;
}

.weui-cell__bd {
    color: #2B3C4C;
    font-size: 32rpx;
}

.weui-cell__ft {
    color: #A6A6A6;
    font-size: 26rpx;
}

.detail::after,
.detail::before {
    border: none
}

.detail>.weui-cell {
    padding-top: 29rpx;
    padding-bottom: 29rpx;
}

.detail>.weui-cell:last-child::after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-top: 0.5px solid #d9d9d9;
    color: #d9d9d9;
    left: 15px;
}