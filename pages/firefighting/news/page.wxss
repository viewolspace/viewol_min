@import "../../../weui.wxss";
.slide-image {
    width: 100%;
    height: 300rpx;
}

.info-list {
    padding: 0 30rpx;
}

.info-list .item {
    padding: 15rpx 0;
    border-bottom: 1rpx solid #EDEDED;
}

.info-list .item .title {
    font-size: 36rpx;
    color: #2B3C4C;
}

.info-list .item .time {
    font-size: 24rpx;
    color: #959595;
}

.info-list .item .cover {
    width: 226rpx;
    margin-left: 20rpx;

}

.info-list .item .cover image {
    width: 100%;
}